<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="1dp"
        android:left="-3dp"
        android:right="-3dp"
        android:top="-100dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="2.5dp"
                android:color="#F6502E" />

            <solid android:color="#FBF5F4" />
            <corners android:radius="30dp"/>
            <padding android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</layer-list>