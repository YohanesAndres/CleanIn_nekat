<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/orderlist"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="20dp">

    <ImageView
        android:id="@+id/iv_itemorder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/jam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_orderid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/iv_itemorder"
        android:text="Order Id : #-ASD3bdgd37927"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_keterangan"
        />
    <TextView
        android:id="@+id/tv_keterangan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@+id/iv_itemorder"
        android:text="Order Finished"
        app:layout_constraintTop_toBottomOf="@+id/tv_orderid"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>